<mvc:View controllerName="timesheetsclone.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="Time sheets">
        <VBox justifyContent="Center" alignItems="Center">
            <Text text="Welcome to TimeSheets" />
            <Image src="https://psa-na6.replicon.com/public/static/media/PolarisLogo.c7b0d0e4.svg" width="350px" />

            <HBox >
                <Label text="Username" class="login_scr" />
                <Input id="username" placeholder="Enter username" class="login_scr" />
            </HBox>
            <HBox >
                <Label text="Password" class="login_scr" />
                <Input id="password" placeholder="Enter password" type="Password" class="login_scr" />
            </HBox>

            <HBox justifyContent="SpaceAround">
                <Button text="Login" press="onLogin" type="Accept" id="submit_btn" class="myButton "/>
                <Button text="Cancel" press="onCancel" type="Reject" class="myButton" id="cancel_btn"/>
            </HBox>
        </VBox>

        
    </Page>
</mvc:View>
