<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form">
    <Dialog title="Signup" titleAlignment="Center">

        <VBox alignItems="Center" justifyContent="Center">
            <Input placeholder="Fullname" class="sapUiTinyMargin" id="idRegisterName" />
            <Input placeholder="Username" class="sapUiTinyMargin" id="idRegisterUsername"/>
            <Input placeholder="Email" type="Email" class="sapUiTinyMargin" id="idRegisterEmail"/>
            <Input placeholder="Password" type="Password" class="sapUiTinyMargin" id="idRegisterPwd" />
            <Input placeholder="Confirm Password" type="Password" class="sapUiTinyMargin" id="idRegisterCPwd"/>
            <HBox class="sapUiSmallMargin">
                <Text text="Have an account?" />
                <Link text="Login" press="onClose" />
            </HBox>
        </VBox>

        <beginButton>
            <Button text="Register" press="onRegister" />
        </beginButton>
        <endButton>
            <Button text="Close" press="onClose" />
        </endButton>

    </Dialog>
</core:FragmentDefinition>